---
const { title } = Astro.props; // Lấy props truyền từ trang
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <link rel="stylesheet" href="/global.css" />
  </head>
  <body>
    <header>
      <h1>My Site Header</h1>
    </header>

    <main>
      <slot /> <!-- Chỗ để nội dung trang chèn vào -->
    </main>

    <footer>
      <p>My Site Footer</p>
    </footer>
  </body>
</html>