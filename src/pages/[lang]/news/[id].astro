---
import NewsLayout from '../../../layouts/NewsLayout.astro';
import { getAllNews, getNewsById } from '../../../data/newsLoader.js';

export const prerender = true;

export async function getStaticPaths() {
  const paths: any[] = [];
  
  // Generate paths for all languages and news items
  const languages = ['en', 'vi', 'ja', 'es', 'ko'];
  const allNews = getAllNews();
  
  for (const lang of languages) {
    for (const newsItem of allNews) {
      paths.push({
        params: { 
          lang: lang,
          id: newsItem.id.toString()
        }
      });
    }
  }
  
  return paths;
}

const { lang, id } = Astro.params;
const newsId = parseInt(id!);

// Get all news for related articles
const allNews = getAllNews();

// Find the news item
const newsItem = getNewsById(newsId);

if (!newsItem) {
  throw new Error(`News item with id ${newsId} not found`);
}

// Get translation for current language
const translation = newsItem.translations[lang as keyof typeof newsItem.translations] || newsItem.translations.en;

const pageTitle = `${translation.title} - VYBROWS ACADEMY | PMU Studio & Academy`;
---

<NewsLayout title={pageTitle}>
  <!-- Hero Header Section - Services Style -->
  <section class="relative bg-gradient-to-b from-[var(--color-primary-dark)] to-black pb-12 pt-60">
    <div class="max-w-[1280px] mx-auto px-4 relative z-10 flex flex-col items-center text-left pt-16">
      <!-- Dynamic Heading -->
      <h1 class="text-4xl md:text-5xl font-bold mb-8 text-white text-center line-clamp-2" style="font-family: 'Playfair Display', serif;">{translation.title}</h1>
      <p class="text-xl text-white/90 max-w-2xl mx-auto text-center mb-8">
        {translation.shortDescription}
      </p>
    </div>
    <!-- SVG Wave -->
    <div class="absolute inset-0 w-full h-full pointer-events-none select-none">
      <svg class="absolute bottom-0 left-0 w-full h-40" viewBox="0 0 1440 320" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path fill="var(--color-primary-dark)" fill-opacity="1" d="M0,288L80,272C160,256,320,224,480,197.3C640,171,800,149,960,154.7C1120,160,1280,192,1360,208L1440,224L1440,320L1360,320C1280,320,1120,320,960,320C800,320,640,320,480,320C320,320,160,320,80,320L0,320Z"/>
      </svg>
    </div>
  </section>

  <!-- Breadcrumb -->
  <div class="bg-gray-50 border-b">
    <div class="max-w-7xl mx-auto px-6 py-3">
      <nav class="flex items-center text-sm text-gray-600">
        <a href={lang === 'en' ? '/' : `/${lang}`} class="hover:text-primary transition-colors">Home</a>
        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <a href={`/${lang}/news`} class="hover:text-primary transition-colors">News</a>
        <svg class="w-4 h-4 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        <span class="text-gray-900 font-medium line-clamp-1">{translation.title}</span>
      </nav>
    </div>
  </div>

  <!-- Main Content -->
  <section class="py-16 px-6 min-h-screen" style="background: var(--color-bg);">
    <div class="max-w-7xl mx-auto">
      <div class="flex gap-8">
        
        <!-- Main Article -->
        <article class="flex-1 bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden">
          <!-- Featured Image -->
          <div class="relative w-full h-64 md:h-96 overflow-hidden">
            <img 
              src={newsItem.mainImage} 
              alt={translation.title}
              class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/30 via-transparent to-transparent"></div>
            
            <!-- Article Meta in Image -->
            <div class="absolute bottom-6 left-6 right-6">
              <div class="flex items-center gap-3 text-white/90 text-sm font-medium">
                <div class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 002 2v12a2 2 0 002 2z" />
                  </svg>
                  <span>{newsItem.createdDate}</span>
                </div>
                <div class="flex items-center gap-1">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                  <span>PMU News</span>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Article Content -->
          <div class="p-8 md:p-12">
            <!-- Article Body -->
            <div class="prose prose-lg prose-gray max-w-none">
              <div class="text-gray-700 leading-relaxed" set:html={translation.content} />
            </div>
            
            <!-- Social Share -->
            <div class="mt-8 pt-8 border-t border-gray-200">
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                  <span class="text-sm font-medium text-gray-700">Share this article:</span>
                  <div class="flex gap-2">
                    <button class="p-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
                      </svg>
                    </button>
                    <button class="p-2 bg-blue-800 text-white rounded-lg hover:bg-blue-900 transition-colors">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                    </button>
                    <button class="p-2 bg-pink-600 text-white rounded-lg hover:bg-pink-700 transition-colors">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.75.097.118.112.221.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.748-1.378 0 0-.599 2.282-.744 2.840-.282 1.098-1.040 2.16-1.699 3.047C8.69 23.53 10.297 24.001 12.017 24.001c6.624 0 11.99-5.367 11.99-11.988C24.007 5.369 18.641.001 12.017.001z"/>
                      </svg>
                    </button>
                  </div>
                </div>
                <a href={`/${lang}/news`} class="inline-flex items-center gap-2 text-primary hover:text-primary/80 transition-colors font-medium">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                  </svg>
                  Back to News
                </a>
              </div>
            </div>
          </div>
        </article>

        <!-- Sidebar -->
        <aside class="w-80 space-y-6 hidden lg:block">
          <!-- Quick Info -->
          <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Article Info</h3>
            <div class="space-y-3">
              <div class="flex items-center gap-3 text-sm">
                <div class="w-10 h-10 bg-[#8B4513]/10 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 002 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <div class="text-gray-500">Published</div>
                  <div class="font-medium text-gray-900">{newsItem.createdDate}</div>
                </div>
              </div>
              <div class="flex items-center gap-3 text-sm">
                <div class="w-10 h-10 bg-[#8B4513]/10 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                </div>
                <div>
                  <div class="text-gray-500">Category</div>
                  <div class="font-medium text-gray-900">PMU News</div>
                </div>
              </div>
            </div>
          </div>

          <!-- Contact CTA -->
          <div class="bg-gradient-to-br from-[#8B4513] to-[#8B4513]/80 rounded-xl p-6 text-white">
            <h3 class="text-lg font-bold mb-3">Ready to Get Started?</h3>
            <p class="text-white/90 text-sm mb-4">
              Join our PMU training program and start your journey to becoming a certified professional.
            </p>
            <a 
              href={`/${lang}/contact`} 
              class="inline-block w-full bg-white text-primary font-semibold py-3 px-4 rounded-lg text-center hover:bg-gray-50 transition-colors"
            >
              Contact Us Today
            </a>
          </div>
        </aside>
      </div>
    </div>
  </section>

  <!-- Related News Section -->
  <section class="py-16 px-6 bg-gray-50">
    <div class="max-w-7xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12 text-gray-900">Related Articles</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {allNews.filter((item: any) => item.id !== newsId).slice(0, 3).map((item: any) => {
          const relatedTranslation = item.translations[lang as keyof typeof item.translations] || item.translations.en;
          return (
            <article class="group bg-white rounded-xl shadow-sm hover:shadow-2xl transition-all duration-500 overflow-hidden border border-gray-100">
              <a href={`/${lang}/news/${item.id}`} class="block h-full">
                <div class="relative overflow-hidden h-48">
                  <img 
                    src={item.mainImage} 
                    alt={relatedTranslation.title} 
                    class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    loading="lazy"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
                
                <div class="p-6">
                  <div class="flex items-center gap-2 mb-3">
                    <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 002 2v12a2 2 0 002 2z" />
                    </svg>
                    <time class="text-sm text-gray-500 font-medium">{item.createdDate}</time>
                  </div>
                  
                  <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary transition-colors duration-300 line-clamp-2 leading-tight">
                    {relatedTranslation.title}
                  </h3>
                  
                  <p class="text-gray-600 text-sm leading-relaxed line-clamp-3 mb-4">
                    {relatedTranslation.shortDescription}
                  </p>
                  
                  <div class="flex items-center text-primary font-medium text-sm group-hover:gap-2 transition-all duration-300">
                    <span>Read More</span>
                    <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </div>
              </a>
            </article>
          );
        })}
      </div>
      
      <!-- View All Button -->
      <div class="text-center mt-12">
        <a 
          href={`/${lang}/news`} 
          class="inline-flex items-center gap-2 px-8 py-4 bg-[#8B4513] text-white font-semibold rounded-lg hover:bg-[#8B4513]/90 transition-colors shadow-md hover:shadow-lg"
        >
          <span>View All Articles</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</NewsLayout>

<!-- Structured Data for Article -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "{translation.title}",
  "description": "{translation.shortDescription}",
  "image": "{newsItem.mainImage}",
  "datePublished": "{newsItem.createdDate}",
  "author": {
    "@type": "Organization",
    "name": "VYBROWS ACADEMY | PMU Studio & Academy"
  },
  "publisher": {
    "@type": "Organization",
    "name": "VYBROWS ACADEMY | PMU Studio & Academy",
    "logo": {
      "@type": "ImageObject",
      "url": "https://vybrowsbeauty.com/logo.webp"
    }
  }
}
</script>

<style>
  /* Line clamp utilities for text truncation */
  .line-clamp-1 {
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>