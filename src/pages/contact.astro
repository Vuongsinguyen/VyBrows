---
import NewsLayout from '../layouts/NewsLayout.astro';
import FullContactSection from '../components/UI/section/FullContactSection.astro';
import BannerFix from '../components/UI/section/BannerFix.astro';

export const prerender = true;

const pageTitle = 'Contact Us - VyBrows Academy';
const pageDescription = 'Get in touch with VyBrows Academy for professional permanent makeup training, beauty services, and PMU certification programs. Schedule a consultation with our expert team today. Located in Houston, Texas, serving students nationwide.';
---

<NewsLayout title={pageTitle} description={pageDescription}>
  <BannerFix 
    title="Contact Us" 
    subtitle="Get in touch with VyBrows Academy for professional beauty training and services"
    showBreadcrumb={true}
    breadcrumbItems={[{ href: '/contact', label: 'Contact' }]}
  />

  <!-- Contact Content -->
  <FullContactSection hideHeading={true} />
</NewsLayout>