<MainLayout title="Sitemap - VYBROWS ACADEMY | PMU Studio & Academy">
  <div class="container mx-auto px-6 py-12 max-w-6xl">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-primary mb-4">Site Map</h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Navigate through all pages of VYBROWS ACADEMY | PMU Studio & Academy
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Main Pages -->
      <div class="bg-white rounded-lg shadow-lg p-6 border-l-4 border-primary">
        <h2 class="text-2xl font-semibold text-primary mb-4 flex items-center">
          <span class="material-icons-outlined mr-2">home</span>
          Main Pages
        </h2>
        <ul class="space-y-3">
          {siteData.mainPages.map((page) => (
            <li>
              <a 
                href={page.url} 
                class="block p-3 rounded-lg hover:bg-gray-50 border border-gray-200 transition-colors group"
              >
                <div class="font-medium text-primary group-hover:text-primary-dark">
                  {page.name}
                </div>
                <div class="text-sm text-gray-600 mt-1">
                  {page.description}
                </div>
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Services -->
      <div class="bg-white rounded-lg shadow-lg p-6 border-l-4 border-secondary">
        <h2 class="text-2xl font-semibold text-secondary mb-4 flex items-center">
          <span class="material-icons-outlined mr-2">medical_services</span>
          Services
        </h2>
        <ul class="space-y-2">
          {siteData.services.map((service) => (
            <li>
              <a 
                href={service.url} 
                class="block p-2 rounded hover:bg-gray-50 text-gray-700 hover:text-secondary transition-colors"
              >
                {service.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Training -->
      <div class="bg-white rounded-lg shadow-lg p-6 border-l-4 border-accent">
        <h2 class="text-2xl font-semibold text-accent mb-4 flex items-center">
          <span class="material-icons-outlined mr-2">school</span>
          Training Courses
        </h2>
        <ul class="space-y-2">
          {siteData.training.map((course) => (
            <li>
              <a 
                href={course.url} 
                class="block p-2 rounded hover:bg-gray-50 text-gray-700 hover:text-accent transition-colors"
              >
                {course.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

