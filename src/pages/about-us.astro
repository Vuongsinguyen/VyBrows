---
import '/src/styles/color.css';
import '/src/styles/global.css';
import PageLayout from '../layouts/PageLayout.astro';
import aboutUsData from '../content/about-us.json' assert { type: 'json' };

export const prerender = true;

const lang = 'en'; // English version without prefix

const pageTitle = 'About Us';
const pageDescription = 'Learn about VyBrows Academy - America\'s premier permanent makeup training institute. Discover our expert instructors, world-class facilities, comprehensive PMU certification programs, and commitment to excellence in beauty education since 2005.';

// Create section labels for sidebar
const sectionLabels = aboutUsData.sections.reduce((acc: Record<string, string>, section: any) => {
  acc[section.id] = section.title.en;
  return acc;
}, {});
---

<PageLayout 
  title="About Us"
  subtitle="Learn more about VyBrows Academy and our commitment to excellence"
  description={pageDescription}
  showBreadcrumb={true}
  breadcrumbItems={[
    { href: '/about-us', label: 'About Us' }
  ]}
>
<div class="w-full bg-surface flex justify-center">
<div class="w-full max-w-7xl bg-surface flex flex-col lg:flex-row gap-6 items-start px-6 py-8">
      <!-- Left Sidebar -->
      <aside class="w-full lg:w-64 bg-surface rounded-lg lg:mt-0 lg:sticky lg:top-32 z-20 order-1">
        <ul class="rounded-lg overflow-hidden flex flex-col">
          {aboutUsData.sections.map((section: any, index: number) => (
            <li>
              <a 
                href={`/about-us/${section.id}`} 
                class="block rounded-none px-3 py-2 font-normal transition-colors flex items-center gap-2 hover:text-primary"
                style="color: rgba(0, 0, 0, 0.7);"
              >
                <img src="/images/diamond.svg" alt="" class="w-8 h-8 flex-shrink-0" />
                <span>{section.title.en}</span>
              </a>
            </li>
          ))}
        </ul>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 space-y-12 order-2">
        <!-- Overview Section -->
        <div class="space-y-8">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-primary mb-6 font-lora">Welcome to VyBrows Academy</h2>
            <p class="text-lg text-on-surface max-w-3xl mx-auto leading-relaxed">
              At VyBrows Academy, we are passionate about the art and science of permanent makeup. 
              Our mission is to provide world-class training and services that empower individuals 
              to achieve their beauty goals with confidence and professionalism.
            </p>
          </div>

          <!-- Quick Navigation Cards -->
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
            <a 
              href="/about-us/why-choose-us" 
              class="group block bg-gradient-to-br from-amber-50 to-yellow-50 p-6 rounded-lg shadow-sm border border-amber-200 hover:shadow-md transition-all duration-300 hover:border-amber-400"
            >
              <h3 class="text-xl font-bold text-amber-800 mb-3 group-hover:text-amber-900 transition-colors">
                WHY CHOOSE US
              </h3>
              <p class="text-gray-700 text-sm line-clamp-3">
                Discover what sets VyBrows Academy apart - our expertise, quality, and commitment to excellence...
              </p>
              <div class="flex items-center text-amber-700 text-sm font-medium mt-4 group-hover:gap-2 transition-all duration-300">
                <span>Learn More</span>
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </a>
            <a 
              href="/about-us/expertise-experience" 
              class="group block bg-gradient-to-br from-emerald-50 to-teal-50 p-6 rounded-lg shadow-sm border border-emerald-200 hover:shadow-md transition-all duration-300 hover:border-emerald-400"
            >
              <h3 class="text-xl font-bold text-emerald-800 mb-3 group-hover:text-emerald-900 transition-colors">
                EXPERTISE & EXPERIENCE
              </h3>
              <p class="text-gray-700 text-sm line-clamp-3">
                Learn about our master-level artistry, international certifications, and proven track record...
              </p>
              <div class="flex items-center text-emerald-700 text-sm font-medium mt-4 group-hover:gap-2 transition-all duration-300">
                <span>Learn More</span>
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </a>
            <a 
              href="/about-us/safe-painless" 
              class="group block bg-gradient-to-br from-green-50 to-emerald-50 p-6 rounded-lg shadow-sm border border-green-200 hover:shadow-md transition-all duration-300 hover:border-green-400"
            >
              <h3 class="text-xl font-bold text-green-800 mb-3 group-hover:text-green-900 transition-colors">
                SAFE & PAINLESS TECHNIQUES
              </h3>
              <p class="text-gray-700 text-sm line-clamp-3">
                Explore our advanced pain management and medical-grade sterilization protocols...
              </p>
              <div class="flex items-center text-green-700 text-sm font-medium mt-4 group-hover:gap-2 transition-all duration-300">
                <span>Learn More</span>
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </a>
            <a 
              href="/about-us/world-class-training" 
              class="group block bg-gradient-to-br from-indigo-50 to-blue-50 p-6 rounded-lg shadow-sm border border-indigo-200 hover:shadow-md transition-all duration-300 hover:border-indigo-400"
            >
              <h3 class="text-xl font-bold text-indigo-800 mb-3 group-hover:text-indigo-900 transition-colors">
                WORLD-CLASS TRAINING
              </h3>
              <p class="text-gray-700 text-sm line-clamp-3">
                Discover our comprehensive training programs, international certifications, and continuous education...
              </p>
              <div class="flex items-center text-indigo-700 text-sm font-medium mt-4 group-hover:gap-2 transition-all duration-300">
                <span>Learn More</span>
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </a>
            <a 
              href="/about-us/natural-stunning" 
              class="group block bg-gradient-to-br from-pink-50 to-rose-50 p-6 rounded-lg shadow-sm border border-pink-200 hover:shadow-md transition-all duration-300 hover:border-pink-400"
            >
              <h3 class="text-xl font-bold text-pink-800 mb-3 group-hover:text-pink-900 transition-colors">
                NATURAL & STUNNING RESULTS
              </h3>
              <p class="text-gray-700 text-sm line-clamp-3">
                See how we create breathtaking, natural-looking enhancements with artistic mastery...
              </p>
              <div class="flex items-center text-pink-700 text-sm font-medium mt-4 group-hover:gap-2 transition-all duration-300">
                <span>Learn More</span>
                <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </a>
          </div>

          <!-- Featured Content -->
          <div class="bg-gradient-to-r from-primary/5 to-primary/10 rounded-2xl p-8 md:p-12">
            <div class="text-center">
              <h3 class="text-2xl font-bold text-primary mb-4">Why Choose VyBrows Academy?</h3>
              <p class="text-lg text-on-surface mb-8 max-w-2xl mx-auto">
                With over 20 years of experience in the permanent makeup industry, 
                we combine traditional artistry with cutting-edge techniques to deliver exceptional results.
              </p>
              <div class="grid md:grid-cols-3 gap-6">
                <div class="text-center">
                  <div class="w-16 h-16 bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                    </svg>
                  </div>
                  <h4 class="font-bold text-primary mb-2">Expert Training</h4>
                  <p class="text-sm text-gray-600">Comprehensive courses designed by industry professionals</p>
                </div>
                <div class="text-center">
                  <div class="w-16 h-16 bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                  </div>
                  <h4 class="font-bold text-primary mb-2">Quality Care</h4>
                  <p class="text-sm text-gray-600">Highest standards of safety and hygiene in all procedures</p>
                </div>
                <div class="text-center">
                  <div class="w-16 h-16 bg-primary/20 rounded-full flex items-center justify-center mx-auto mb-4">
                    <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  </div>
                  <h4 class="font-bold text-primary mb-2">Innovation</h4>
                  <p class="text-sm text-gray-600">Latest techniques and technology in permanent makeup</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>
</PageLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>