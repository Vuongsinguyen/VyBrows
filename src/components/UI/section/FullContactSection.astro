---

<section class="px-6 py-16" style="background: var(--color-bg);">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-8" style="color: var(--color-text);">
       Contact Us
    </h2>
    <div class="grid gap-8 mb-12">
      <div class="flex flex-col md:flex-row items-stretch rounded-2xl p-8 shadow-lg hover:scale-105 transition" style="background: var(--color-card-bg);">
        {contacts.map(contact => (
          <div class="flex-1 flex flex-col items-center justify-center px-4 py-2 border-b md:border-b-0 md:border-r last:border-none border-gray-200">
            <span class="text-4xl mb-2">{contact.icon}</span>
            <div class="text-lg font-semibold mb-1 text-center" style="color: var(--color-text);">{contact.label}</div>
            <div class="text-sm text-center break-all mb-2" style="color: var(--color-accent);">{contact.value}</div>
            <div class="text-xs text-center" style="color: var(--color-text-secondary);">
              <div><b>Phone:</b> {contact.phone}</div>
              <div><b>Fax:</b> {contact.fax}</div>
              <div>
                <b>Email:</b>
                <a href={`mailto:${contact.email}`} style="color: var(--color-accent);">{contact.email}</a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
    <div class="grid md:grid-cols-2 gap-8">
      <!-- Map b√™n tr√°i -->
      <div class="rounded-2xl overflow-hidden shadow-lg flex items-center justify-center" style="background: var(--color-card-bg); min-height: 400px;">
        <!-- ƒê·ªïi th√†nh ƒë∆∞·ªùng d·∫´n h√¨nh b·∫°n v·ª´a upload -->
        <img
          src="/images/your-map.png"
          alt="Asia Offices Map"
          class="object-contain w-full h-96"
          style="max-height:400px;"
        />
      </div>
      <!-- Form b√™n ph·∫£i -->
      <form class="rounded-2xl p-8 shadow-lg flex flex-col gap-4"
        style="background: var(--color-card-bg);"
      >
        <h3 class="text-2xl font-bold mb-1 text-center" style="color: var(--color-text);">Contact Us</h3>
        <div class="text-sm text-center mb-4" style="color: var(--color-text-secondary);">
          We will get back to you asap!
        </div>
        <div class="flex gap-2">
          <div class="relative flex-1">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
              <svg width="18" height="18" fill="none" stroke="currentColor"><path d="M9 9a4 4 0 100-8 4 4 0 000 8zM2 16a7 7 0 0114 0" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </span>
            <input
              type="text"
              name="firstName"
              placeholder="First Name"
              required
              class="pl-10 pr-3 py-2 rounded border-gray-200 w-full"
              style="background: var(--color-input-bg); color: var(--color-text); border-color: var(--color-input-border);"
            />
          </div>
          <div class="relative flex-1">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
              <svg width="18" height="18" fill="none" stroke="currentColor"><path d="M9 9a4 4 0 100-8 4 4 0 000 8zM2 16a7 7 0 0114 0" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </span>
            <input
              type="text"
              name="lastName"
              placeholder="Last Name"
              required
              class="pl-10 pr-3 py-2 rounded border-gray-200 w-full"
              style="background: var(--color-input-bg); color: var(--color-text); border-color: var(--color-input-border);"
            />
          </div>
        </div>
        <div class="relative">
          <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
            <svg width="18" height="18" fill="none" stroke="currentColor"><path d="M4 4h10v10H4z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><path d="M4 4l5 5 5-5" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </span>
          <input
            type="email"
            name="email"
            placeholder="Business Email"
            required
            class="pl-10 pr-3 py-2 rounded border-gray-200 w-full"
            style="background: var(--color-input-bg); color: var(--color-text); border-color: var(--color-input-border);"
          />
        </div>
        <div class="relative">
          <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
            <svg width="18" height="18" fill="none" stroke="currentColor"><path d="M2 2h14v14H2z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><path d="M6 10h4M6 6h8" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </span>
          <input
            type="tel"
            name="phone"
            placeholder="Phone"
            required
            class="pl-10 pr-3 py-2 rounded border-gray-200 w-full"
            style="background: var(--color-input-bg); color: var(--color-text); border-color: var(--color-input-border);"
          />
        </div>
        <div class="relative">
          <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400">
            <svg width="18" height="18" fill="none" stroke="currentColor"><circle cx="9" cy="9" r="7" stroke-width="2"/><path d="M6 9l2 2 4-4" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
          </span>
          <select
            name="industry"
            required
            class="pl-10 pr-3 py-2 rounded border-gray-200 w-full appearance-none"
            style="background: var(--color-input-bg); color: var(--color-text); border-color: var(--color-input-border);"
          >
            <option value="" disabled selected>Select Industry</option>
            <option value="it">IT</option>
            <option value="finance">Finance</option>
            <option value="manufacturing">Manufacturing</option>
            <option value="retail">Retail</option>
            <option value="education">Education</option>
            <option value="other">Other</option>
          </select>
        </div>
        <button
          type="submit"
          class="w-full px-6 py-2 rounded font-semibold transition mt-2"
          style="background: var(--color-primary); color: var(--color-button-text);"
        >Send</button>
        <div class="text-xs text-center mt-2" style="color: var(--color-text-secondary);">
          You may also call us at 333-33-33
        </div>
      </form>
    </div>
  </div>
</section>