---
import CompareCard from '../cards/CompareCard.astro';

const compareItems = [
  {
    before: '/images/Comparision/compare1_1.avif',
    after:  '/images/Comparision/compare1_2.avif',
    altBefore: 'Before 1',
    altAfter:  'After 1',
  },
  {
    before: '/images/Comparision/compare2_1.avif',
    after:  '/images/Comparision/compare2_2.avif',
    altBefore: 'Before 2',
    altAfter:  'After 2',
  },
  {
    before: '/images/Comparision/compare3_1.avif',
    after:  '/images/Comparision/compare3_2.avif',
    altBefore: 'Before 3',
    altAfter:  'After 3',
  },
  {
    before: '/images/Comparision/compare4_1.avif',
    after:  '/images/Comparision/compare4_2.avif',
    altBefore: 'Before 4',
    altAfter:  'After 4',
  },
];
---

<style global>
  @import url('https://fonts.googleapis.com/css2?family=Lora:wght@400;700&display=swap');
</style>

<section class="px-6 py-16" style="background: var(--color-bg);">
  <div class="max-w-6xl mx-auto">
    <h2 
      class="text-4xl md:text-5xl font-bold text-center mb-8" 
      style="color: var(--color-text); font-family: 'Lora', serif;"
    >
      And thousands of other clients have trusted and experienced our services!
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-[10px]">
      {compareItems.map(item => (
        <CompareCard
          before={item.before}
          after={item.after}
          altBefore={item.altBefore}
          altAfter={item.altAfter}
          width={300}
          height={300}
        />
      ))}
    </div>

  </div>
</section>