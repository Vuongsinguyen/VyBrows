---
import CompareCard from '../cards/CompareCard.astro';

// define 4 items to render
const compareItems = Array.from({ length: 4 }).map((_, idx) => ({
  before:    `https://picsum.photos/seed/before${idx}/600/400`,
  after:     `https://picsum.photos/seed/after${idx}/600/400`,
  altBefore: `Before ${idx + 1}`,
  altAfter:  `After ${idx + 1}`,
}));
---

<style global>
  @import url('https://fonts.googleapis.com/css2?family=Lora:wght@400;700&display=swap');
</style>

<section class="px-6 py-16" style="background: var(--color-bg);">
  <div class="max-w-6xl mx-auto">
    <h2 
      class="text-4xl md:text-5xl font-bold text-center mb-8" 
      style="color: var(--color-text); font-family: 'Lora', serif;"
    >
      And thousands of other clients have trusted and experienced our services!
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-[10px]">
      {compareItems.map(item => (
        <CompareCard
          before={item.before}
          after={item.after}
          width={300}
          height={300}
        />
      ))}
    </div>

  </div>
</section>