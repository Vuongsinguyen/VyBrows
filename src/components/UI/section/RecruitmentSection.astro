---
const jobs = [
  {
    title: "Frontend Developer",
    location: "Hanoi, Vietnam",
    level: "Senior",
    expDate: "2025-08-31",
    description: "Work with React, Astro, and Tailwind to build modern web apps."
  },
  {
    title: "AI Engineer",
    location: "Remote",
    level: "Internship",
    expDate: "2025-09-15",
    description: "Develop and deploy AI/ML models for real-world business solutions."
  }
];
import Button from '../shared/Button.astro';
---

<section class="px-6 py-16" style="background: var(--color-blue-bg, #2563eb);">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-4xl md:text-5xl font-bold text-center mb-8" style="color: var(--color-text);">
       Recruitment
    </h2>
    <div class="grid md:grid-cols-2 gap-8">
      {jobs.map(job => (
        <div
          class="rounded-2xl p-6 shadow-lg flex flex-col hover:shadow-2xl hover:-translate-y-1 transition duration-200 bg-white/80 dark:bg-gray-800/80"
          style="background: var(--color-card-bg);"
        >
          <div class="text-xl font-semibold mb-2" style="color: var(--color-text);">{job.title}</div>
          <div class="flex items-center gap-2 mb-2">
            <span class="text-sm font-medium" style="color: var(--color-accent);">{job.location}</span>
            <span class="text-xs px-2 py-1 rounded" style="background: var(--color-accent-bg); color: var(--color-text-secondary);">{job.level}</span>
          </div>
          <div class="mb-2" style="color: var(--color-text-secondary);">{job.description}</div>
          <div class="text-xs mb-4" style="color: var(--color-text-secondary);">
            EXP Date: <span class="font-semibold" style="color: var(--color-accent);">{job.expDate}</span>
          </div>
          <div class="flex justify-end mt-auto">
            <Button
              href="mailto:contact@arisvietnam.com"
              variant="primary"
            >
              View Detail
            </Button>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>