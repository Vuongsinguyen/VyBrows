---
export interface Props {
  name: string;
  category: string;
  image1?: string;
  image2?: string;
  features?: string[];
}
const { name, category, image1, image2, features } = Astro.props;
---

<div 
  class="relative rounded-xl bg-surface overflow-hidden group"
  style="height: 500px; min-height: 500px; box-shadow: 0 4px 24px 0 rgba(218, 165, 32, 0.18), 0 1.5px 6px 0 rgba(255, 215, 0, 0.12); border: 1px solid #01513A;"
>
  <!-- Background Images -->
  {image1 && (
    <img
      src={image1}
      alt={name}
      class="absolute inset-0 w-full h-full object-cover z-0
             transform transition-transform duration-300
             group-hover:scale-105"
    />
  )}
  
  <!-- Overlay -->
  <div 
    class="absolute inset-0 pointer-events-none z-10 card-bg-gradient"
  style="background: linear-gradient(0deg, #01513A 15%, rgba(0,51,36,0) 100%);"
  ></div>

  <!-- Content -->
  <div class="relative z-20 flex flex-col items-center justify-end h-full p-6 text-center card-content">
    <h3 
      class="text-xl font-semibold mb-2 text-on-surface font-lora"
      style="font-family: 'Lora', serif; color: var(--color-black2white);"
    >
      {name}
    </h3>
    <p 
      class="text-sm text-on-surface/70 mb-3" 
      style="font-family: 'SF Pro Display', 'SF Pro Text', 'San Francisco', Arial, sans-serif; color: var(--color-bgtext);"
    >
      {category}
    </p>

    {features && features.length > 0 && (
      <ul class="list-disc list-inside text-sm text-on-surface/80 mb-4">
        {features.map(feature => (
          <li>{feature}</li>
        ))}
      </ul>
    )}
    <button 
      class="center-course-btn px-6 py-2 rounded-full font-lora text-base font-semibold bg-gradient-to-r from-yellow-200 via-yellow-400 to-yellow-200 text-[#01513A] shadow-lg border border-yellow-300"
      style="font-family: 'Lora', serif;"
      onclick="event.preventDefault(); const el=document.querySelector('#contact'); if(el){ window.smoothScrollTo(el.getBoundingClientRect().top+window.scrollY-80,700); }"
    >
      Find Course
    </button>
  </div>

  <style>
    .card-bg-gradient {
      opacity: 0;
      transition: opacity 0.3s;
    }
    .group:hover .card-bg-gradient {
      opacity: 1;
    }
    .card-content {
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.3s;
    }
    .group:hover .card-content {
      opacity: 1;
      pointer-events: auto;
    }
    .center-course-btn {
      display: block;
      margin-left: auto;
      margin-right: auto;
      z-index: 30;
      margin-bottom: 50px;
    }
  </style>
</div>