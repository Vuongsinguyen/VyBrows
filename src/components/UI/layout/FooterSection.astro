---
// FooterSection.astro - Professional footer with 4 columns
import { getServiceMenu, menus } from '../../../content/menu.ts';
export interface Props {
  class?: string;
}

const { class: customClass = '' } = Astro.props;

// Lấy ngôn ngữ hiện tại từ URL
const currentLang = Astro.url.pathname.split('/')[1] || 'en';
const menuItems = menus[currentLang] || menus['en'];

// Lấy danh sách dịch vụ từ getServiceMenu (async)
const serviceLinks = await getServiceMenu(currentLang);

const socialLinks = [
  {
    name: "Facebook",
    href: "https://www.facebook.com/vybrows",
    icon: "M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
  },
  {
    name: "Phone",
    href: "tel:(346)-409.9999",
    icon: "M3 5a2 2 0 012-2h2a2 2 0 012 2v1a2 2 0 01-1 1.732L7 9a10 10 0 006 6l1.268-1.268A2 2 0 0115 14h1a2 2 0 012 2v2a2 2 0 01-2 2A16 16 0 013 5z"
  },
  {
    name: "Instagram",
    href: "https://www.instagram.com/vybrowsbeauty?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw==",
    icon: "M7.75 2h8.5A5.75 5.75 0 0122 7.75v8.5A5.75 5.75 0 0116.25 22h-8.5A5.75 5.75 0 012 16.25v-8.5A5.75 5.75 0 017.75 2zm0 1.5a4.25 4.25 0 00-4.25 4.25v8.5a4.25 4.25 0 004.25 4.25h8.5a4.25 4.25 0 004.25-4.25v-8.5a4.25 4.25 0 00-4.25-4.25h-8.5zm4.25 2a5.75 5.75 0 110 11.5 5.75 5.75 0 010-11.5zm0 1.5a4.25 4.25 0 100 8.5 4.25 4.25 0 000-8.5zm5.5-.75a1.125 1.125 0 110 2.25 1.125 1.125 0 010-2.25z"
  }
];
---

<footer class={`bg-[#002319] text-white py-16 ${customClass}`}>
  <div class="max-w-7xl mx-auto px-6">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      
      <!-- Services Column -->
      <div>
  <h3 class="text-lg font-bold uppercase tracking-wide mb-6 font-lora" style="color: var(--color-black2white); font-family: 'Lora', serif;">SERVICES</h3>
        <ul class="space-y-3">
          {serviceLinks.map((service) => (
            <li>
              <a href={service.href} class="text-gray-300 hover:text-white transition-colors duration-200 text-sm leading-relaxed">
                {service.title}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- About Us Column -->
      <div>
        <h3 class="text-lg font-bold uppercase tracking-wide mb-6 font-lora" style="color: var(--color-black2white); font-family: 'Lora', serif;">ABOUT US</h3>
        <ul class="space-y-3">
          {(() => {
            const aboutMenu = menuItems.find(item => item.label.toUpperCase() === 'ABOUT US');
            const aboutLinks = aboutMenu?.children || [];
            return aboutLinks.map(link => (
              <li>
                <a href={link.href} class="text-gray-300 hover:text-white transition-colors duration-200 text-sm leading-relaxed">
                  {link.label}
                </a>
              </li>
            ));
          })()}
        </ul>
      </div>

      <!-- Beauty Creations Column -->
      <div>
        <h3 class="text-lg font-bold uppercase tracking-wide mb-6 font-lora" style="color: var(--color-black2white); font-family: 'Lora', serif;">BEAUTY CREATIONS</h3>
        <ul class="space-y-3">
          <li><a href="#" class="text-gray-300 hover:text-white transition-colors duration-200 text-sm leading-relaxed">TRAINING</a></li>
          <li><a href="#" class="text-gray-300 hover:text-white transition-colors duration-200 text-sm leading-relaxed">BEAUTY STORIES</a></li>
          <li><a href="#" class="text-gray-300 hover:text-white transition-colors duration-200 text-sm leading-relaxed">BEAUTY SOLUTIONS</a></li>
          <li><a href="#" class="text-gray-300 hover:text-white transition-colors duration-200 text-sm leading-relaxed">WELLNESS SOLUTIONS</a></li>
          <li><a href="#" class="text-gray-300 hover:text-white transition-colors duration-200 text-sm leading-relaxed">HEALTH COMMUNICATION</a></li>
          <li><a href="#" class="text-gray-300 hover:text-white transition-colors duration-200 text-sm leading-relaxed">WELLNESS COMMUNICATION</a></li>
          <li><a href="#" class="text-gray-300 hover:text-white transition-colors duration-200 text-sm leading-relaxed">PROMOTIONS</a></li>
          <li><a href="#" class="text-gray-300 hover:text-white transition-colors duration-200 text-sm leading-relaxed">SUPPLY LISTS</a></li>
        </ul>
      </div>

      <!-- Explore Column -->
      <div>
        <h3 class="text-lg font-bold uppercase tracking-wide mb-6 font-lora" style="color: var(--color-black2white); font-family: 'Lora', serif;">EXPLORE</h3>
        <ul class="space-y-3 mb-8">
          <!-- Bạn có thể bổ sung dữ liệu mới cho cột này tại đây -->
        </ul>

        <!-- Social Links -->
        <div class="flex gap-3">
          {socialLinks.map((social) => (
            <a 
              href={social.href} 
              class="w-10 h-10 border-[0.5px] border-white rounded-lg flex items-center justify-center text-white hover:bg-white/10 transition-colors duration-200"
              aria-label={social.name}
            >
              <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                <path d={social.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="border-t border-gray-800 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <!-- Copyright -->
        <div class="text-gray-400 text-sm mb-4 md:mb-0">
          ©2025 Copyrights by VyBrows Academy
        </div>

        <!-- Version -->
        <div class="text-gray-400 text-sm">
          Version 1.0
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Smooth scrolling for anchor links */
  footer a {
    scroll-behavior: smooth;
  }
  
  /* Hover effect for links */
  footer a:hover {
    transform: translateX(2px);
    transition: transform 0.2s ease-in-out;
  }
</style>