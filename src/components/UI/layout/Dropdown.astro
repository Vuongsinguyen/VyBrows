---
export interface Props {
  label: string;
  items: Array<{
    href: string;
    title: string;
    description: string;
  }>;
  class?: string;
}

const { label, items, class: customClass = '' } = Astro.props;
---

<div class={`group relative dropdown-container w-full ${customClass}`}> 
  <button
    class="dropdown-trigger px-3 py-2 text-sm font-medium transition-colors flex items-center font-lora font-bold"
    style="font-size:16px; color: var(--color-black);"
  >
    <span class="whitespace-nowrap font-lora font-bold" style="color: var(--color-black2white); font-family: 'Lora', serif;">
      {label}
    </span>
    <svg class="ml-1 h-4 w-4 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="var(--color-stroke)" style="stroke: var(--color-stroke);">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>

  <div class="dropdown-menu absolute top-full right-0 w-full shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-[9999] px-6 py-8 flex justify-end items-center before:content-[''] before:absolute before:-top-1 before:left-0 before:w-full before:h-1 before:bg-[var(--color-card-bg)] bg-[var(--color-card-bg)]"
    style="box-shadow: var(--color-shadow);"
  >
    <div class="w-full max-w-[1280px] px-6 py-4 flex justify-end items-center mx-auto">
      <div class={
        label === 'About Us' || label === 'Về chúng tôi' || label === '会社概要'
          ? 'grid grid-cols-2 md:grid-cols-4 gap-0 w-full text-right'
          : 'grid grid-cols-1 md:grid-cols-3 gap-0.5 w-full text-right'
      }>
        {items.map((item) => (
          <a
            class="block transition-colors group/item px-4 py-3 rounded-md text-left whitespace-nowrap ... font-lora font-bold"
            style="font-size:16px; color: var(--color-black2white); font-family: 'Lora', serif;"
            href={item.href}
          >
            <div class="flex items-center gap-2">
              <span class="mr-2 flex-shrink-0 flex items-center justify-center">
                <span class="inline-flex items-center justify-center rounded-full border border-black dark:border-white" style="width: 38px; height: 38px; border-width: 2px;">
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="10" cy="10" r="8" stroke="black" stroke-width="2" fill="none" />
                    <path d="M7.5 10.5l2 2 4-4" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                </span>
              </span>
              <div class="flex-1 min-w-0">
                <div class="font-medium mb-1 text-sm transition-colors text-left" style="color: var(--color-black);">{item.title}</div>
                <div class="text-xs text-left" style="color: var(--color-text-secondary);">{item.description}</div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  .dropdown-menu {
    max-width: 100vw;
    width: 100vw;
    left: 0;
    right: 0;
    box-sizing: border-box;
    position: fixed !important;
    z-index: 99999 !important;
    padding: 0.5rem 1.5rem;
  }
</style>