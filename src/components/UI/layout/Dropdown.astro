---
export interface Props {
  label: string;
  items: Array<{
    href: string;
    title: string;
    description: string;
  }>;
  class?: string;
}

const { label, items, class: customClass = '' } = Astro.props;
---

<div class="hidden md:flex w-full justify-center" style="position: relative;">
  <div class={`group dropdown-container w-full ${customClass}`} style="position: static;"> 
  <button
    class="dropdown-trigger px-3 py-2 text-sm font-medium transition-colors flex items-center font-lora font-bold"
    style="font-size:16px; color: var(--color-black);"
  >
    <span class="whitespace-nowrap font-lora font-bold" style="color: var(--color-black2white); font-family: 'Lora', serif;">
      {label}
    </span>
    <svg class="ml-1 h-4 w-4 transition-transform group-hover:rotate-180" fill="none" viewBox="0 0 24 24" stroke="var(--color-stroke)" style="stroke: var(--color-stroke);">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
    </svg>
  </button>

  <div class="dropdown-menu absolute top-full right-0 shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-[9999] px-2 py-2 bg-[var(--color-card-bg)]"
    style="box-shadow: var(--color-shadow); position: static;"
  >
    <div class="w-full max-w-[400px] px-2 py-2 flex flex-col items-start mx-auto" style="position: static;">
      <div class={
        label === 'About Us' || label === 'Về chúng tôi' || label === '会社概要'
          ? 'grid grid-cols-2 md:grid-cols-4 gap-0 w-full text-right'
          : 'grid grid-cols-1 md:grid-cols-3 gap-0.5 w-full text-right'
      } style="position: static;">
        {items.map((item) => (
          <a
            class="block transition-colors group/item px-4 py-3 rounded-md text-left whitespace-nowrap ... font-lora font-bold"
            style="font-size:16px; color: var(--color-black2white); font-family: 'Lora', serif;"
            href={item.href}
          >
            <div class="flex items-center gap-2" style="position: static;">
              <span class="mr-2 flex-shrink-0 flex items-center justify-center" style="position: static;">
                <span class="inline-flex items-center justify-center rounded-full border border-black dark:border-white" style="width: 38px; height: 38px; border-width: 2px; position: static;">
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <circle cx="10" cy="10" r="8" stroke="black" stroke-width="2" fill="none" />
                    <path d="M7.5 10.5l2 2 4-4" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                </span>
              </span>
              <div class="flex-1 min-w-0" style="position: static;">
                <div class="font-medium mb-1 text-sm transition-colors text-left" style="color: var(--color-black); position: static;">{item.title}</div>
                <div class="text-xs text-left" style="color: var(--color-text-secondary); position: static;">{item.description}</div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</div>

<style>
  .dropdown-container {
    display: inline-block;
    position: relative;
  }
  .dropdown-menu {
    min-width: 220px;
    width: auto;
    right: 0;
    left: auto;
    position: absolute;
    z-index: 99999;
    padding: 0.5rem 1.5rem;
  }
</style>