---
import '/src/styles/global.css';

export interface Props {
  product: {
    image?: string;
    title?: string;
    name?: string;
    description?: string;
    desc?: string;
    techs?: string[];
    members?: number;
    months?: number;
    industry?: string;
  };
}

const { product } = Astro.props;
