  <div class="flex-shrink-0 w-20 h-20 bg-surface-2 rounded-lg flex items-center justify-center overflow-hidden">
    {product.image ? (
      <img src={product.image} alt={product.title ?? product.name ?? ''} class="object-cover w-full h-full rounded-lg" />
